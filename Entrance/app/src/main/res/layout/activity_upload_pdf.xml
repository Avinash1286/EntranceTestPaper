<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadPdf">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/header"
        android:background="#DDDBDB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="50dp"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_baseline_backspace_24"
            android:layout_height="50dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Upload PDF"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textColor="#000"
            android:gravity="center"
            android:textSize="20sp"
            />
    </RelativeLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/header"
        android:layout_marginTop="50dp"
        android:id="@+id/selectFile"
        android:src="@drawable/ic_baseline_post_add_24"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Select File"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="18sp"
        android:id="@+id/selectStatus"
        android:layout_below="@id/selectFile"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pdfTitle"
        android:hint="PDF Title"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/selectStatus"
        android:layout_marginTop="10dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Select Section"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:id="@+id/typeTitle"
        android:layout_below="@id/pdfTitle"/>


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/showOptions"
        android:layout_below="@id/typeTitle"
        android:layout_marginTop="10dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/showOptions"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/uploadBtn"
        android:text="Upload"
        android:textStyle="bold"
        />
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>